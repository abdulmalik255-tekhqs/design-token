{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__fixtures__/**",
    "**/__mocks__/**",
    "**/__test__/**",
    "**/__tests__/**",
    "**/__snapshots__/**",
    "**/*.test.ts",
    "**/*.test-d.ts",
    "**/*.test.*.ts"
  ]
}
